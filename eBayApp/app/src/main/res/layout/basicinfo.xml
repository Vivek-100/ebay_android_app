<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:id="@+id/txt_Category_Name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="Category Name"/>

    <TextView android:id="@+id/txt_Category_Name_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Name val"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp"
        android:layout_alignTop="@+id/txt_Category_Name"
        android:layout_toRightOf="@+id/txt_Category_Name"
        android:layout_toEndOf="@+id/txt_Category_Name" />

    <TextView android:id="@+id/txt_Condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txt_Category_Name"
        android:text="Condition"/>

    <TextView android:id="@+id/txt_Condition_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition val"
        android:layout_alignTop="@+id/txt_Condition"
        android:layout_alignLeft="@+id/txt_Category_Name_val"
        android:layout_alignStart="@+id/txt_Category_Name_val" />

    <TextView android:id="@+id/txt_Buying_Format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buying format "
        android:layout_alignTop="@+id/txt_Buying_Format_val"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView android:id="@+id/txt_Buying_Format_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buying format val "
        android:layout_below="@+id/txt_Condition_val"
        android:layout_alignLeft="@+id/txt_Condition_val"
        android:layout_alignStart="@+id/txt_Condition_val"
        android:layout_marginTop="20dp" />
</RelativeLayout>