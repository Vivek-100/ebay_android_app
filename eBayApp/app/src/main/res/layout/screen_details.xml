<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffffff">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

        <ImageView android:id="@+id/img_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_icon"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Title"/>

        <TextView android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title"
            android:textStyle="bold"
            android:text="Price"/>

        <TextView android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_price"
            android:text="Location"/>

        <ImageView android:id="@+id/img_top_rated"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/itemtoprated"
            android:layout_below="@+id/txt_location"/>

        <ImageButton android:id="@+id/img_buy_now"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Buy Now"
            android:src="@drawable/buynow"
            android:layout_below="@+id/txt_location"
            android:layout_centerHorizontal="true" />

        <ImageButton android:id="@+id/login_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fb"
            android:adjustViewBounds="true"
            android:layout_alignTop="@+id/img_buy_now"
            android:layout_alignRight="@+id/img_shopping"
            android:layout_alignEnd="@+id/img_shopping" />

        <Button android:id="@+id/img_basic_info"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Basic Info"
            android:layout_below="@+id/img_buy_now"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button android:id="@+id/img_seller"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Seller"
            android:layout_below="@+id/img_buy_now"
            android:layout_centerHorizontal="true" />

        <Button android:id="@+id/img_shopping"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Shipping"
            android:layout_alignTop="@+id/img_seller"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    <RelativeLayout android:id="@+id/layout_basic_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/img_shopping"
        android:weightSum="1">

        <TextView android:id="@+id/txt_Category_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Category Name"/>

        <TextView android:id="@+id/txt_Category_Name_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Name val"
            android:layout_marginLeft="79dp"
            android:layout_marginStart="79dp"
            android:layout_alignTop="@+id/txt_Category_Name"
            android:layout_toRightOf="@+id/txt_Category_Name"
            android:layout_toEndOf="@+id/txt_Category_Name" />

        <TextView android:id="@+id/txt_Condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt_Category_Name"
            android:text="Condition"/>

        <TextView android:id="@+id/txt_Condition_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condition val"
            android:layout_alignTop="@+id/txt_Condition"
            android:layout_alignLeft="@+id/txt_Category_Name_val"
            android:layout_alignStart="@+id/txt_Category_Name_val" />

        <TextView android:id="@+id/txt_Buying_Format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buying Format "
            android:layout_alignTop="@+id/txt_Buying_Format_val"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView android:id="@+id/txt_Buying_Format_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buying format val "
            android:layout_below="@+id/txt_Condition_val"
            android:layout_alignLeft="@+id/txt_Condition_val"
            android:layout_alignStart="@+id/txt_Condition_val"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/layout_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/img_shopping"
        android:weightSum="1">


        <TextView android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="User Name"/>

        <TextView android:id="@+id/txt_user_name_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name val"
            android:layout_marginLeft="79dp"
            android:layout_marginStart="79dp"
            android:layout_alignTop="@+id/txt_user_name"
            android:layout_toRightOf="@+id/txt_user_name"
            android:layout_toEndOf="@+id/txt_user_name" />

        <TextView android:id="@+id/txt_feedback_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt_user_name"
            android:text="Feedback Score"/>

        <TextView android:id="@+id/txt_feedback_score_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="feedback score val"
            android:layout_alignTop="@+id/txt_feedback_score"
            android:layout_alignLeft="@+id/txt_user_name_val"
            android:layout_alignStart="@+id/txt_user_name_val" />

        <TextView android:id="@+id/txt_positive_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Positive Feedback"
            android:layout_alignTop="@+id/txt_positive_feedback_val"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView android:id="@+id/txt_positive_feedback_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="positive feedback val "
            android:layout_below="@+id/txt_feedback_score_val"
            android:layout_alignLeft="@+id/txt_feedback_score_val"
            android:layout_alignStart="@+id/txt_feedback_score_val"
            android:layout_marginTop="20dp" />

        <TextView android:id="@+id/txt_feedback_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback Rating"
            android:layout_alignTop="@+id/txt_feedback_rating_val"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView android:id="@+id/txt_feedback_rating_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="feedback rating val "
            android:layout_below="@+id/txt_positive_feedback_val"
            android:layout_alignLeft="@+id/txt_positive_feedback_val"
            android:layout_alignStart="@+id/txt_positive_feedback_val"
            android:layout_marginTop="20dp" />

        <TextView android:id="@+id/txt_top_rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Rated"
            android:layout_alignTop="@+id/txt_top_rated_val"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView android:id="@+id/txt_top_rated_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            android:layout_below="@+id/txt_feedback_rating_val"
            android:layout_alignLeft="@+id/txt_feedback_rating_val"
            android:layout_alignStart="@+id/txt_feedback_rating_val"
            android:layout_marginTop="20dp" />

        <TextView android:id="@+id/txt_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store"
            android:layout_alignTop="@+id/txt_store_val"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView android:id="@+id/txt_store_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store val "
            android:layout_below="@+id/txt_top_rated_val"
            android:layout_alignLeft="@+id/txt_top_rated_val"
            android:layout_alignStart="@+id/txt_top_rated_val"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/layout_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/img_shopping"
        android:weightSum="1">

        <TextView android:id="@+id/txt_shipping_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Shipping Type"/>

        <TextView android:id="@+id/txt_shipping_type_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping type val"
            android:layout_marginLeft="79dp"
            android:layout_marginStart="79dp"
            android:layout_alignTop="@+id/txt_shipping_type"
            android:layout_toRightOf="@+id/txt_shipping_type"
            android:layout_toEndOf="@+id/txt_shipping_type" />

        <TextView android:id="@+id/txt_handling_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handling Time"
            android:layout_alignTop="@+id/txt_handling_time_val" />

        <TextView android:id="@+id/txt_handling_time_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handling time val"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt_shipping_type_val"
            android:layout_alignLeft="@+id/txt_shipping_type_val"
            android:layout_alignStart="@+id/txt_shipping_type_val" />

        <TextView android:id="@+id/txt_shipping_locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Locations"
            android:layout_alignTop="@+id/txt_shipping_locations_val"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView android:id="@+id/txt_shipping_locations_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shipping location val "
            android:layout_below="@+id/txt_handling_time_val"
            android:layout_alignLeft="@+id/txt_handling_time_val"
            android:layout_alignStart="@+id/txt_handling_time_val"
            android:layout_marginTop="20dp" />

        <TextView android:id="@+id/txt_expedited_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expedited Shipping"
            android:layout_alignTop="@+id/txt_expedited_shipping_val"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView android:id="@+id/txt_expedited_shipping_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            android:layout_below="@+id/txt_shipping_locations_val"
            android:layout_alignLeft="@+id/txt_shipping_locations_val"
            android:layout_alignStart="@+id/txt_shipping_locations_val"
            android:layout_marginTop="20dp" />

        <TextView android:id="@+id/txt_oneday_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Day Shipping"
            android:layout_alignTop="@+id/txt_oneday_shipping_val"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView android:id="@+id/txt_oneday_shipping_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            android:layout_below="@+id/txt_expedited_shipping_val"
            android:layout_alignLeft="@+id/txt_expedited_shipping_val"
            android:layout_alignStart="@+id/txt_expedited_shipping_val"
            android:layout_marginTop="20dp" />

        <TextView android:id="@+id/txt_returns_accepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Returns Accepted"
            android:layout_alignTop="@+id/txt_returns_accepted_val"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView android:id="@+id/txt_returns_accepted_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            android:layout_below="@+id/txt_oneday_shipping_val"
            android:layout_alignLeft="@+id/txt_oneday_shipping_val"
            android:layout_alignStart="@+id/txt_oneday_shipping_val"
            android:layout_marginTop="20dp" />


    </RelativeLayout>


    </RelativeLayout>
</ScrollView>
